div(class="menu-container")
    ul(class="main-nav")
        li(id="nav-search")
            a(href="" title="{{'Search' | translate}}")
                span(class="icon icon-search")
                span(class="item", translate) Search
        <% if (project.is_backlog_activated && project.my_permissions.indexOf("view_us") != -1) { %>
        li(id="nav-backlog")
            a(href="" title="{{'Backlog' | translate}}" tg-nav="project-backlog:project=project.slug")
                span(class="icon icon-backlog")
                span(class="item", translate) Backlog
        <% } %>
        <% if (project.is_kanban_activated && project.my_permissions.indexOf("view_us") != -1) { %>
        li(id="nav-kanban")
            a(href="" title="{{'Kanban' | translate}}" tg-nav="project-kanban:project=project.slug")
                span(class="icon icon-kanban")
                span(class="item", translate) Kanban
        <% } %>
        <% if (project.is_issues_activated && project.my_permissions.indexOf("view_issues") != -1) { %>
        li(id="nav-issues")
            a(href="" title="{{'Issues' | translate}}" tg-nav="project-issues:project=project.slug")
                span(class="icon icon-issues")
                span(class="item", translate) Issues
        <% } %>
        <% if (project.is_wiki_activated && project.my_permissions.indexOf("view_wiki_pages") != -1) { %>
        li(id="nav-wiki")
            a(href="" title="{{'Wiki' | translate}}" tg-nav="project-wiki:project=project.slug")
                span(class="icon icon-wiki")
                span(class="item", translate) Wiki
        <% } %>
        li(id="nav-team")
            a(href="" title="{{'Team' | translate}}" tg-nav="project-team:project=project.slug")
                span(class="icon icon-team")
                span(class="item", translate) Team
        <% if (project.videoconferences) { %>
        li(id="nav-video")
            a(href!="<%- project.videoconferenceUrl %>" target="_blank" title="{{'Meet Up' | translate}}")
                span(class="icon icon-video")
                span(class="item", translate) Meet Up
        <% } %>
        <% if (project.i_am_owner) { %>
        li(id="nav-admin")
            a(href="" tg-nav="project-admin-home:project=project.slug" title="{{'Admin' | translate}}")
                span(class="icon icon-settings")
                span(class="item", translate) Admin
        <% } %>
    <% if (user) { %>
    div(class="user")
        div(class="user-settings")
            ul(class="popover")
                li
                    a(href="" title="{{'User Profile' | translate}}", tg-nav="user-settings-user-profile:project=project.slug", translate) User Profile
                li
                    a(href="" title="{{'Change Password' | translate}}", tg-nav="user-settings-user-change-password:project=project.slug", translate) Change Password
                li
                    a(href="" title="{{'Notifications' | translate}}", tg-nav="user-settings-mail-notifications:project=project.slug", translate) Notifications
                <% if (feedbackEnabled) { %>
                li
                    a(href="" class="feedback" title="{{'Feedback' | translate}}", translate) Feedback
                <% } %>
                li
                    a(href="" title="{{'Logout' | translate}}" class="logout", translate) Logout
            a(href="" title="{{'User preferences' | translate}}" class="avatar" id="nav-user-settings")
                img(src="{{ user.photo }}" alt="{{ user.full_name_display }}")
    <% } %>
