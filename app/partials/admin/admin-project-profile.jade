div.wrapper(tg-project-profile, ng-controller="ProjectProfileController as ctrl",
            ng-init="section='admin'; sectionName=('Project details' | translate)")
    sidebar.menu-secondary.sidebar(tg-admin-navigation="project-profile")
        include ../includes/modules/admin-menu

    sidebar.menu-tertiary.sidebar(tg-admin-navigation="details")
        include ../includes/modules/admin-submenu-project-profile

    section.main.project-details
        header
            include ../includes/components/mainTitle

        form
            fieldset
                label(for="project-name", translate) Project Name
                input(type="text", name="name", placeholder="{{'Project name' | translate}}", id="project-name",
                      ng-model="project.name", data-required="true", maxlength="45")

            fieldset
                label(for="project-slug", translate) Project Slug
                input(type="text", name="slug", placeholder="{{'Slug' | translate}}", id="project-slug",
                      ng-model="project.slug", data-required="true")

            fieldset
                label(for="project-sprints", translate) Number of sprints
                input(type="number", name="total_milestones", min="0", placeholder="{{'Number of sprints' | translate}}",
                      id="project-sprints", ng-model="project.total_milestones", data-type="digits")

            fieldset
                label(for="total-story-points", translate) Number of US points
                input(type="number", name="total_story_points", min="0", placeholder="{{'Number of US points' | translate}}",
                      id="total-story-points", ng-model="project.total_story_points",
                      data-type="digits", data-required="true")

            fieldset
                label(for="project-description", translate) Description
                textarea(name="description", placeholder="{{'Description' | translate}}", id="project-description",
                         ng-model="project.description", data-required="true")

            div
                div.privacy-settings
                    div
                        input.privacy-project(type="radio", name="private-project", ng-model="project.is_private", ng-value="false")
                        label.trans-button(for="public-project")
                            span(translate) Public Project
                    div
                        input.privacy-project(type="radio", name="private-project", ng-model="project.is_private", ng-value="true")
                        label.trans-button(for="private-project")
                            span(translate) Private Project

            button.button-green.submit-button(type="submit", title="{{'Save' | translate}}") Save
            a.delete-project(href="", title="{{'Delete this project' | translate}}", ng-click="ctrl.openDeleteLightbox()", translate) Delete this project

div.lightbox.lightbox-delete-project(tg-lb-delete-project)
    include ../includes/modules/lightbox-delete-project
