.view-wiki-content
    section.wysiwyg(tg-bind-html='wiki.html')
      span.edit.icon.icon-edit(title="{{'Edit' | translate}}")
.edit-wiki-content(style='display: none;')
  textarea(placeholder="{{'Write your wiki page here' | translate}}", ng-model='wiki.content', tg-markitup='tg-markitup')
  a.help-markdown(href='https://taiga.io/support/taiga-markdown-syntax/', target='_blank', title="{{'Mardown syntax help' | translate}}")
    span.icon.icon-help
    span(translate) Markdown syntax help
  span.action-container
    a.save.icon.icon-floppy(href='', title="{{'Save' | translate}}")
      a.cancel.icon.icon-delete(href='', title="{{'Cancel' | translate}}")
