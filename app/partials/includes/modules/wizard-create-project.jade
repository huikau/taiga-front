form
    section.wizard-step.create-step1(data-step="step1")
        div.title
            h1(translate) Choose a template
            p(translate) Which template would fit better in your project?
        div.template-wrapper
            div.template-inner
                fieldset(ng-repeat="template in templates")
                    input(type="radio", name="template", id="template-{{ template.id }}",
                          ng-value='template.id', ng-model="data.creation_template",
                          data-required="true")
                    label.backlog(for="template-{{ template.id }}")
                        span.icon.icon-backlog
                        h2 {{ template.name }}
                    p {{ template.description }}

        fieldset
            a.button-next.button.button-green(href="", title="{{'Next' | translate}}", translate) Next

    section.wizard-step.create-step2.active(data-step="step2")
        div.title
            h1(translate) Create Project
            p(translate) Fresh and clean. So exciting!
        div.template-wrapper
            div.template-inner
                fieldset
                    input(type="text", name="name", ng-model="data.name", data-required="true", placeholder="{{'Name' | translate}}", maxlength="45")
                fieldset
                    textarea(name="description", ng-model="data.description", data-required="true",  placeholder="{{'Description' | translate}}")
                fieldset.wizard-action
                    div
                        a.button-prev.button.button-gray(href="", title="{{'Prev' | translate}}", translate) Prev
                        button.button-green.submit-button(type="submit", title="{{'Create' | translate}}", translate) Create

                    button(type="submit", class="hidden")

div.progress-bar
    div.progress-state
        span(translate) Template selection
        span(translate) Name and description
        // span Final touches
    div.progress-bar-wrapper
        div.bar

a.close(href="" title="{{'close' | translate}}")
    span.icon.icon-delete
