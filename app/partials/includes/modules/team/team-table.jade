section.table-team.basic-table
    header.row.team-header
        div.username
        div.member-stats
            div.attribute.attribute-name(ng-if="issuesEnabled")
                span(translate) Mr. Wolf
                div.popover.attribute-explanation
                    span(translate) Closed issues
            div.attribute(ng-if="tasksEnabled")
                span(translate) Iocaine Drinker
                div.popover.attribute-explanation
                    span(translate) Iocaine doses ingested
            div.attribute(ng-if="wikiEnabled")
                span(translate) Cervantes
                div.popover.attribute-explanation
                    span(translate) Wiki pages edited
            div.attribute(ng-if="issuesEnabled", translate)
                span(translate) Total Bug Hunter
                div.popover.attribute-explanation
                    span(translate) Bugs reported
            div.attribute(ng-if="tasksEnabled", translate)
                span(translate) Night Shift
                div.popover.attribute-explanation
                    span(translate) Tasks closed
            div.attribute
                span(translate) Total Power
                div.popover.attribute-explanation
                    span(translate) Total Points

    div.hero(tg-team-current-user, stats="stats", currentuser="currentUser", projectid="projectId", issuesEnabled="issuesEnabled", tasksenabled="tasksEnabled", wikienabled="wikiEnabled", ng-if="::currentUser")

h2(ng-show="memberships.length")
    span(translate) Team >
    span  {{filtersRole.name || ("All" | translate)}}

section.table-team.basic-table(tg-team-members, memberships="memberships", stats="stats", filtersq="filtersQ", filtersrole="filtersRole", issuesEnabled="issuesEnabled", tasksenabled="tasksEnabled", wikienabled="wikiEnabled")
