section.colors-table

    div.project-values-title
        h2 {{ sectionName }}
        a.button.button-gray.show-add-new(href="", title="Add New")
            span(translate) Add new {{ objName }}

    div.table-header
        div.row
            div.color-column(translate) Color
            div.status-name(translate) Name
            div.options-column

    div.table-main
        div.sortable
            form(ng-repeat="value in values", tg-bind-scope)
                div.row.table-main.visualization
                    span.icon.icon-drag-v

                    div.color-column
                        div.current-color(style="background: {{ value.color }}")

                    div.status-name
                        span {{ value.name }}

                    div.options-column
                        a.edit-value.icon.icon-edit(href="", title="{{'Edit value' | translate}}")
                        a.delete-value.icon.icon-delete(href="", title="{{'Delete value' | translate}}")

                div.row.table-main.edition.hidden
                    div.color-column(tg-color-selection, ng-model="value")
                        div.current-color(style="background: {{ value.color }}")
                        include ../../components/select-color

                    div.status-name
                        input(name="name", type="text", placeholder="{{'Write a name for the new element' | translate}}",
                              ng-model="value.name", data-required="true", data-maxlength="255")

                    div.options-column
                        a.save.icon.icon-floppy(href="", title="{{'Save changes' | translate}}")
                        a.cancel.icon.icon-delete(href="", title="{{'Cancel' | translate}}")

        form
            div.row.table-main.new-value.hidden
                div.color-column(tg-color-selection, ng-model="newValue")
                    div.current-color(style="background: {{ newValue.color }}")
                    include ../../components/select-color

                div.status-name
                    input(name="name", type="text", placeholder="{{'Write a name for the new element' | translate}}",
                          ng-model="newValue.name", data-required="true", data-maxlength="255")

                div.options-column
                    a.add-new.icon.icon-floppy(href="", title="{{'Add' | translate}}")
                    a.delete-new.icon.icon-delete(href="", title="{{'Cancel' | translate}}")
