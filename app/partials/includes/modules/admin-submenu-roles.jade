section.admin-submenu-roles
    header
        h1(translate) Roles

    nav
        ul
            li(ng-repeat="item in roles")
                a(href="" ng-click="ctrl.setRole(item)", ng-class="{active: role.id == item.id}")
                  span.single-role {{ item.name }}
                  span.icon.icon-arrow-right

        div(tg-new-role)
            a.button-gray.add-button(href="", title="{{'Add New Role' | translate}}")
                span.text(translate) + New role
            input(type="text", class="hidden new")
